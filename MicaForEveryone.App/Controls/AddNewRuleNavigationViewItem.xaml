<?xml version="1.0" encoding="utf-8" ?>
<NavigationViewItem
    x:Class="MicaForEveryone.App.Controls.AddNewRuleNavigationViewItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MicaForEveryone.App.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <NavigationViewItem.ContextFlyout>
        <MenuFlyout>
            <MenuFlyoutItem x:Uid="AddProcessRuleMenuFlyoutItem" Click="AddProcessRuleMenuFlyoutItem_Click">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xECAA;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Uid="AddClassRuleMenuFlyoutItem" Click="AddClassRuleMenuFlyoutItem_Click">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE737;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
        </MenuFlyout>
    </NavigationViewItem.ContextFlyout>

</NavigationViewItem>
